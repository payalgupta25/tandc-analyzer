{
  "manifest_version": 3,
  "name": "tandc-analyzer",
  "version": "1.0",
  "description": "This Extension scans Terms Conditions instantly, flags risky clauses, and gives you simple, clear summaries â€” so you know what you are really agreeing to",
  "permissions": ["tabs", "scripting","storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["flaggedPhrases.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
  "service_worker": "background.js",
  "type": "module"
}
}
